<ul class="list-group col-xs-12">
    <% recipes.forEach((recipe) => { %>
        <li class="list-group-item list-selectable item-id col-xs-12" id="<%= recipe.id%>">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="col-xs-9 col-sm-10 inside-list">
                        <div><%= recipe.name %></div>
                    </div>
                    <div class="col-xs-3 col-sm-2 inside-list">
                        <div><img class="small-icon" src="/visual-assets/people-icon.png"/> <%= recipe.numberPeople %></div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="col-xs-1">
                        <a href="/recipes/<%= recipe._id%>"><span class="glyphicon show-glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                    </div>
                    <% if (recipe.hasIdInArray(user._id, recipe._favorites) > -1) { %>
                        <div class="col-xs-1">
                            <span class="glyphicon fav-recipes fav-glyphicon glyphicon-heart" aria-hidden="true"></span>
                        </div>
                    <% } else { %>
                        <div class="col-xs-1">
                            <span class="glyphicon fav-recipes fav-glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                        </div>
                    <% } %>
                    <% if (recipe._creator.equals(user._id)) { %>
                        <div class="col-xs-1">
                            <a href="/recipes/<%= recipe._id%>/edit"><span class="glyphicon edit-glyphicon glyphicon-pencil" aria-hidden="true"></span></a>                       
                        </div>
                    <% } %>
                    <div class="col-xs-1">
                        <span class="glyphicon add-glyphicon glyphicon-plus" aria-hidden="true"></span>                       
                    </div>
                </div>
                <div class="list-hidable list-hidden clear-both">
                    <div class="row-fluid">
                        <div class="form-group col-xs-3 col-md-4 centered">
                        </div>
                        <div class="form-group col-xs-6 col-md-4 centered">
                            <img id="preview" src="<%= recipe.picturePath %>">
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="col-xs-12 inside-list">
                            <div class="title">Creator
                                <div class="sub-title"><%= recipe._creator.username %></div>
                            </div>
                            <div class="title">Category
                            <div class="sub-title"><%= recipe.category %></div>
                            </div>
                            <div class="title">Ingredients
                            <div class="sub-title"><%= recipe.ingredients %></div>
                            </div>
                            <div class="title">Directions
                            <div class="sub-title"><%= recipe.directions %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>                    
        </li>
    <% }) %>
</ul>